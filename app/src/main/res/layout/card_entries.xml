<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
  card_view:cardCornerRadius="4dp"
  card_view:cardElevation="4dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/activity_padding_horizontal"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/card_entries_iv"
        android:layout_width="110dp"
        android:layout_height="143dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:transitionName="to_more_detail"/>

      <TextView
          style="@style/TextAppearance.AppCompat.Headline"
          android:id="@+id/card_entries_tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_toLeftOf="@id/card_entries_iv"
          android:layout_marginRight="4dp"
          android:ellipsize="end"/>

      <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:id="@+id/card_entries_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/card_entries_tv_name"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/card_entries_iv"
        android:ellipsize="end" />

    <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:id="@+id/card_entries_tv_programme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/card_entries_tv_address"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/card_entries_iv"
        android:ellipsize="end" />

  </RelativeLayout>

</android.support.v7.widget.CardView>